@model GestionBodega.Models.Usuario

@{
    Layout = null;
    ViewData["Title"] = "Crear Cuenta";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro - Gestión Bodega</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
            width: 100%;
            max-width: 420px;
            text-align: center;
            border-top: 5px solid #20c997;
            animation: slideUp 0.8s ease-out;
        }

        .form-control {
            background-color: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 0.8rem 1rem 0.8rem 3rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #20c997;
                box-shadow: 0 0 0 0.2rem rgba(32, 201, 151, 0.25);
            }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #adb5bd;
        }

        .btn-register {
            background: linear-gradient(to right, #11998e, #38ef7d);
            border: none;
            border-radius: 10px;
            padding: 0.8rem;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
            color: white;
        }

            .btn-register:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                color: white;
            }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h3 class="fw-bold text-dark mb-1">NUEVA CUENTA</h3>
        <p class="text-muted small mb-4">Únete al equipo de bodega</p>

        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger py-2 small">@ViewData["Mensaje"]</div>
        }

        <form asp-action="Registrar" method="post">
            <div class="mb-3 position-relative text-start">
                <i class="fas fa-user input-icon"></i>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre Completo" required>
            </div>
            <div class="mb-3 position-relative text-start">
                <i class="fas fa-envelope input-icon"></i>
                <input asp-for="Email" type="email" class="form-control" placeholder="Correo Electrónico" required>
            </div>
            <div class="mb-4 position-relative text-start">
                <i class="fas fa-lock input-icon"></i>
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-register">Registrarse</button>
                <a asp-action="Login" class="btn btn-link text-muted text-decoration-none small">
                    ¿Ya tienes cuenta? Iniciar Sesión
                </a>
            </div>
        </form>
    </div>
</body>
</html>