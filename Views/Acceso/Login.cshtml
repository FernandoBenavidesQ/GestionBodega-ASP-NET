@{
    Layout = null;
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión Bodega</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            padding: 3rem;
            border-radius: 20px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
            width: 100%;
            max-width: 420px;
            text-align: center;
            border-top: 5px solid #0dcaf0;
            animation: slideUp 0.8s ease-out;
        }

        .brand-logo {
            font-size: 3rem;
            color: #0f2027;
            margin-bottom: 1rem;
        }

        .brand-title {
            font-weight: 700;
            color: #2c3e50;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
        }

        .brand-subtitle {
            font-size: 0.9rem;
            color: #7f8c8d;
            margin-bottom: 2rem;
        }

        .form-control {
            background-color: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 0.8rem 1rem 0.8rem 3rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                background-color: #fff;
                border-color: #0dcaf0;
                box-shadow: 0 0 0 0.2rem rgba(13, 202, 240, 0.25);
            }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #adb5bd;
            transition: 0.3s;
        }

        .form-floating:focus-within .input-icon {
            color: #0dcaf0;
        }

        .btn-login {
            background: linear-gradient(to right, #0f2027, #2c5364);
            border: none;
            border-radius: 10px;
            padding: 0.8rem;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                background: linear-gradient(to right, #203a43, #2c5364);
            }

        .alert-custom {
            border-radius: 10px;
            font-size: 0.9rem;
            border: none;
            background-color: #ffebee;
            color: #c62828;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .footer-text {
            margin-top: 2rem;
            font-size: 0.8rem;
            color: #bdc3c7;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="brand-logo"><i class="fas fa-cube text-info"></i></div>
        <h3 class="brand-title">GESTIÓN BODEGA</h3>
        <p class="brand-subtitle">Acceso al Sistema de Inventario</p>

        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-custom d-flex align-items-center mb-4" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <div>@ViewData["Mensaje"]</div>
            </div>
        }

        <form asp-action="Login" method="post">
            <div class="mb-4 position-relative text-start">
                <i class="fas fa-envelope input-icon"></i>
                <input type="email" name="email" class="form-control" placeholder="Correo Electrónico" required autofocus>
            </div>
            <div class="mb-4 position-relative text-start">
                <i class="fas fa-lock input-icon"></i>
                <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
            </div>
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-login">
                    INGRESAR <i class="fas fa-arrow-right ms-2"></i>
                </button>

                <a asp-action="Registrar" class="btn btn-link text-muted text-decoration-none small mt-2">
                    ¿No tienes cuenta? Regístrate aquí
                </a>
            </div>
        </form>

        <div class="footer-text">
            &copy; @DateTime.Now.Year Sistema de Control de Stock
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>