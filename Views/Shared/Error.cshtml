@model GestionBodega.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error del Sistema";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden text-center">

                <div class="card-header p-4 border-0" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
                    <div class="bg-white bg-opacity-25 rounded-circle d-inline-flex p-3 mb-2 shadow-sm">
                        <i class="fas fa-bug fa-3x text-white"></i>
                    </div>
                    <h4 class="fw-bold text-white mb-0 mt-2">¡Algo salió mal!</h4>
                </div>

                <div class="card-body p-5 bg-white">
                    <p class="lead text-muted mb-4">
                        El sistema ha encontrado un error inesperado al procesar tu solicitud.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-light border dashed-border mb-4 p-3">
                            <small class="text-uppercase text-muted fw-bold d-block mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">
                                ID de Seguimiento Técnico
                            </small>
                            <code class="text-danger fw-bold fs-5">@Model.RequestId</code>
                        </div>
                    }

                    <p class="small text-muted mb-4">
                        Si el problema persiste, contacta al equipo de TI con el código de arriba.
                    </p>

                    <div class="d-grid gap-2">
                        <a asp-controller="Bodega" asp-action="Index" class="btn btn-dark btn-lg rounded-pill fw-bold shadow-sm hover-scale">
                            <i class="fas fa-home me-2"></i> Volver al Centro de Comando
                        </a>
                    </div>
                </div>

                <div class="card-footer bg-light py-3">
                    <small class="text-muted">Sistema de Gestión de Bodega v2.5</small>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .dashed-border {
        border-style: dashed !important;
        border-width: 2px !important;
    }

    .hover-scale:hover {
        transform: translateY(-3px);
        transition: 0.3s;
    }
</style>