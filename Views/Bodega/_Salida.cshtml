@{
    var personal = ViewBag.Personal as List<GestionBodega.Models.Personal>;
    var categorias = ViewBag.Categorias as List<GestionBodega.Models.Categoria>;
}

<div class="row">
    <div class="col-md-7">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0"><i class="fas fa-cubes me-2"></i> Selector de Materiales</h6>
            </div>
            <div class="card-body">

                <div class="mb-3">
                    <label class="small text-muted fw-bold text-uppercase">1. Elija Familia</label>
                    <div class="d-flex flex-wrap gap-2 mt-1">
                        @foreach (var cat in categorias)
                        {
                            <button class="btn btn-outline-secondary btn-sm rounded-pill"
                                    onclick="cargarMaterialesSalida(@cat.Id, this)">
                                @cat.Nombre
                            </button>
                        }
                    </div>
                </div>

                <div class="border rounded p-2 bg-light" style="height: 350px; overflow-y: auto;">
                    <label class="small text-muted fw-bold text-uppercase mb-2">2. Seleccione Producto</label>
                    <div id="contenedorProductosSalida" class="list-group">
                        <div class="text-center text-muted py-5">
                            <i class="fas fa-arrow-up mb-2"></i><br>Seleccione una carpeta arriba
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card shadow-lg border-warning h-100">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0 fw-bold"><i class="fas fa-clipboard-list me-2"></i> Detalle Cotización</h6>
            </div>
            <div class="card-body d-flex flex-column">

                <div class="mb-3">
                    <label class="form-label small fw-bold">Responsable</label>
                    <select id="selTecnicoSal" class="form-select form-select-sm">
                        <option value="">-- Seleccione Técnico --</option>
                        @foreach (var p in personal)
                        {
                            <option value="@p.Id">@p.Nombre @p.Apellido</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label small fw-bold">Proyecto / Obra</label>
                    <input id="inpProySal" type="text" class="form-control form-control-sm" placeholder="Ej: Fibra Centro">
                </div>

                <div class="flex-grow-1 border rounded mb-3 overflow-auto" style="max-height: 200px;">
                    <table class="table table-sm table-striped mb-0 font-monospace" style="font-size: 0.85rem;">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>Item</th>
                                <th class="text-center" width="60">Cant</th>
                                <th width="30"></th>
                            </tr>
                        </thead>
                        <tbody id="bodyCarritoSalida">
                        </tbody>
                    </table>
                </div>

                <button class="btn btn-dark w-100 py-2 fw-bold" onclick="confirmarSalida()">
                    <i class="fas fa-paper-plane me-2"></i> GENERAR SALIDA
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let carritoSalida = [];

    function cargarMaterialesSalida(catId, btn) {
        document.querySelectorAll('.btn-outline-secondary').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        fetch('/Bodega/ObtenerMaterialesParaSalida?categoriaId=' + catId)
            .then(r => r.json())
            .then(data => {
                let div = document.getElementById('contenedorProductosSalida');
                div.innerHTML = '';
                if(data.length === 0) {
                    div.innerHTML = '<div class="p-3 text-center text-muted">Carpeta vacía.</div>';
                    return;
                }
                data.forEach(m => {
                    let item = document.createElement('a');
                    item.className = 'list-group-item list-group-item-action d-flex justify-content-between align-items-center cursor-pointer';
                    item.onclick = () => agregarAlCarrito(m);
                    item.innerHTML = `
                        <div>
                            <div class="fw-bold text-dark">${m.nombre}</div>
                            <small class="text-muted">${m.descripcion}</small>
                        </div>
                        <span class="badge bg-secondary rounded-pill">Stock: ${m.stock}</span>
                    `;
                    div.appendChild(item);
                });
            });
    }

    function agregarAlCarrito(m) {
        if(carritoSalida.find(x => x.id === m.id)) { alert("Ya agregado."); return; }

        carritoSalida.push({ id: m.id, nombre: m.nombre, stock: m.stock, cantidad: 1 });
        renderCarrito();
    }

    function renderCarrito() {
        let tbody = document.getElementById('bodyCarritoSalida');
        tbody.innerHTML = '';
        carritoSalida.forEach((item, idx) => {
            tbody.innerHTML += `
                <tr>
                    <td class="align-middle text-truncate" style="max-width: 150px;">${item.nombre}</td>
                    <td>
                        <input type="number" class="form-control form-control-sm text-center p-0"
                               min="1" max="${item.stock}" value="${item.cantidad}"
                               onchange="carritoSalida[${idx}].cantidad = parseInt(this.value)">
                    </td>
                    <td class="align-middle text-center">
                        <i class="fas fa-times text-danger cursor-pointer" onclick="borrarItem(${idx})"></i>
                    </td>
                </tr>
            `;
        });
    }

    function borrarItem(idx) { carritoSalida.splice(idx, 1); renderCarrito(); }

    function confirmarSalida() {
        let personal = document.getElementById('selTecnicoSal').value;
        let proy = document.getElementById('inpProySal').value;

        if(!personal || !proy || carritoSalida.length === 0) { alert("Complete todos los datos."); return; }

        let dto = { PersonalId: parseInt(personal), Proyecto: proy, Items: carritoSalida.map(x => ({ MaterialId: x.id, Cantidad: x.cantidad })) };

        fetch('/Bodega/ProcesarSalida', { method: 'POST', headers: {'Content-Type':'application/json'}, body: JSON.stringify(dto) })
        .then(r => r.json()).then(d => { alert(d.message); if(d.success) location.reload(); });
    }
</script>