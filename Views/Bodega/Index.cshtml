@model List<GestionBodega.Models.Material>

@{
    ViewData["Title"] = "Panel de Control Bodega";
}

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2 class="fw-bold text-dark" style="letter-spacing: -1px;">
            <i class="fas fa-cubes text-info me-2"></i> GESTIÓN DE BODEGA
        </h2>
    </div>

    <div class="row g-4">

        <div class="col-lg-2 col-md-3">
            <div class="card shadow-sm border-0 h-100" style="background: linear-gradient(to bottom, #f8f9fa, #ffffff);">
                <div class="card-body p-2">
                    <h6 class="text-muted text-uppercase fw-bold px-3 mt-3 mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">Módulos</h6>

                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                        <button class="nav-link active text-start py-3 mb-2 d-flex align-items-center rounded-3"
                                id="tab-inventario" data-bs-toggle="pill" data-bs-target="#content-inventario" type="button"
                                style="transition: all 0.3s;">
                            <div class="icon-box bg-primary bg-opacity-10 text-primary rounded p-2 me-3">
                                <i class="fas fa-warehouse fa-lg"></i>
                            </div>
                            <div>
                                <span class="d-block fw-bold">Inventario</span>
                                <small class="text-muted" style="font-size: 0.75em;">Stock Real</small>
                            </div>
                        </button>

                        <button class="nav-link text-start py-3 mb-2 d-flex align-items-center rounded-3"
                                id="tab-salidas" data-bs-toggle="pill" data-bs-target="#content-salidas" type="button"
                                style="transition: all 0.3s;">
                            <div class="icon-box bg-warning bg-opacity-10 text-warning rounded p-2 me-3">
                                <i class="fas fa-dolly-flatbed fa-lg"></i>
                            </div>
                            <div>
                                <span class="d-block fw-bold">Salidas</span>
                                <small class="text-muted" style="font-size: 0.75em;">Generar Ticket</small>
                            </div>
                        </button>

                        <button class="nav-link text-start py-3 mb-2 d-flex align-items-center rounded-3"
                                id="tab-devolucion" data-bs-toggle="pill" data-bs-target="#content-devolucion" type="button"
                                style="transition: all 0.3s;">
                            <div class="icon-box bg-success bg-opacity-10 text-success rounded p-2 me-3">
                                <i class="fas fa-undo-alt fa-lg"></i>
                            </div>
                            <div>
                                <span class="d-block fw-bold">Devoluciones</span>
                                <small class="text-muted" style="font-size: 0.75em;">Reingreso</small>
                            </div>
                        </button>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-10 col-md-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="content-inventario" role="tabpanel">
                    @await Html.PartialAsync("_Inventario", Model)
                </div>
                <div class="tab-pane fade" id="content-salidas" role="tabpanel">
                    @await Html.PartialAsync("_Salida")
                </div>
                <div class="tab-pane fade" id="content-devolucion" role="tabpanel">
                    @await Html.PartialAsync("_Devolucion")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <style>
        .nav-pills .nav-link {
            color: #5a6a85;
            border: 1px solid transparent;
        }

            .nav-pills .nav-link:hover {
                background-color: #f1f5f9;
                transform: translateX(5px);
            }

            .nav-pills .nav-link.active {
                background-color: #ffffff;
                color: #0d6efd;
                border: 1px solid #e2e8f0;
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            }
    </style>
}